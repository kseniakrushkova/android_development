<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sky"
            android:id="@+id/sky"
            android:contentDescription="@string/sky" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sun"
            android:id="@+id/sun"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/sun" />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/grass"
            android:id="@+id/grass"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/grass" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clock"
            android:id="@+id/clock"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/clock"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hour_hand"
            android:id="@+id/hour_hand"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/hour_hand"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>